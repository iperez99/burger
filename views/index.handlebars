<div class="container">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4"><i class="fas fa-hamburger"></i> Devour a Burger!</h1>
            <p class="lead">Create your favorite burger and devour it!</p>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="card col s12">
                <div class="col s6">
                    <h2>Burgers ready to eat</h2>
                    <ul>
                        {{#each burgers}}
                        {{#unless this.devoured}}
                        <li>
                            <div class="right-align">
                                {{burger_name}}

                                <button class="btn waves-effect waves-light devour" type="submit" data-id="{{id}}"
                                    data-newDevour="{{devoured}}">DEVOUR! <i class="fas fa-hamburger"></i></button>
                            </div>
                        </li>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>

                <div class="col s6">
                    <h2>Devoured Burgers</h2>
                    <ul>
                        {{#each burgers}}
                        {{#if this.devoured}}
                        <li>
                            {{burger_name}}
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="card card-panel hoverable">
                <h2 class="center-align">Add a Burger!</h2>

                <form class="create-form">
                    <div class="form-group">
                        <label for="burgerName">Burger Name: </label>
                        <input type="text" id="burgerName">
                    </div>

                    <div class="center-align">
                        <button class="btn waves-effect waves-light" type="submit" name="action" id="addBurger">Add
                            Burger
                            <i class="fas fa-hamburger"></i></button>
                    </div>

                </form>
            </div>
        </div>


    </div>